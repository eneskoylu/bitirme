<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recyclerEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="test"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/recyclerImageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:contentDescription="@string/todo"/>


    <TextView
        android:id="@+id/recyclerCommentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="test1"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/recyclerAddressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="test2"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/recyclerCityText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="test3"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/recyclerDistrictText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="test4"
        android:layout_margin="5dp"/>


    <TextView
        android:id="@+id/recyclerTransmissionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="test5"
        android:layout_margin="5dp"/>

</LinearLayout>